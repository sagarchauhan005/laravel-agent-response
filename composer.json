{
    "name": "sagarchauhan005/laravel-llms-txt",
    "description": "Laravel package for llms.txt standard - serves /llms.txt endpoint and provides Human/Machine markdown views for SSR pages",
    "keywords": [
        "laravel",
        "llms-txt",
        "llms",
        "markdown",
        "agent",
        "ai"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2.5|^8.0",
        "illuminate/routing": "11.*",
        "illuminate/support": "11.*",
        "league/html-to-markdown": "^5.0",
        "symfony/dom-crawler": "^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0|^6.0|^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Sagarchauhan005\\LaravelLlmsTxt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sagarchauhan005\\LaravelLlmsTxt\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sagarchauhan005\\LaravelLlmsTxt\\LlmsTxtServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
